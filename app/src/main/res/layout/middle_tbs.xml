<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TBSMiddle"
    android:layout_width="match_parent"
    android:background="@drawable/mid"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/source"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/edit_text_state"
        android:textColorHint="#000000"
        android:ems="10"
        android:hint="Enter Source Station Code"
        android:paddingLeft="20dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginTop="17dp"
        android:background="@drawable/edit_text_state"
        android:ems="10"
        android:hint="Enter Destination Source Code"
        android:paddingLeft="20dp"
        android:inputType="text"
        android:textColorHint="#000000"
        android:layout_below="@+id/source"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_text_state"
        android:ems="10"
        android:hint="Journey date ( DD-MM-YYYY )"
        android:paddingLeft="20dp"
        android:inputType="date"
        android:textColorHint="#000000" />

    <Button
        android:id="@+id/button_tbs"
        android:layout_width="123dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button_state"
        android:text="Next"
        android:textColor="#000000" />

    <Button
        android:id="@+id/get_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="147dp"
        android:layout_marginStart="26dp"
        android:background="@drawable/button_state"
        android:text="  GET STATION CODE    "
        android:textColor="#000000" />

</RelativeLayout>